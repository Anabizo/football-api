generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campeonato {
  id           Int            @id @default(autoincrement())
  nome         String
  slug         String         @unique
  tipo         String
  edicaoAtual  String
  status       Boolean
  logo         String?
  estatisticas Estatisticas[]
}

model Time {
  id           Int            @id @default(autoincrement())
  nome         String
  sigla        String?
  estadio      String?
  cidade       String?
  escudo       String?
  // Relacionamentos
  estatisticas Estatisticas[]
}

model Estatisticas {
  id           Int        @id @default(autoincrement())
  pontos       Int
  jogos        Int
  vitorias     Int
  derrotas     Int
  empates      Int
  golsMarcados Int
  golsSofridos Int
  saldoGols    Int
  posicao      Int
  timeId       Int
  nomeTime     String
  escudo       String?
  campeonatoId Int
  time         Time       @relation(fields: [timeId], references: [id])
  campeonato   Campeonato @relation(fields: [campeonatoId], references: [id])

  @@unique([timeId, campeonatoId])
}

model Partida {
  partida_id            Int      @id @unique
  time_mandante_id      Int
  time_mandante_nome    String
  time_mandante_sigla   String
  time_mandante_escudo  String
  time_visitante_id     Int
  time_visitante_nome   String
  time_visitante_sigla  String
  time_visitante_escudo String
  status                String
  slug                  String   @unique
  data_realizacao       DateTime
}

model PartidaId {
  id                      Int       @id @default(autoincrement())
  timeMandanteId          Int
  timeVisitanteId         Int
  timeMandanteNome        String
  timeVisitanteNome       String
  placarMandante          Int
  placarVisitante         Int
  nomeEstadio             String
  status                  String
  chutesMandante          Int
  chutesVisitante         Int
  chutesAGolMandante      Int
  chutesAGolVisitante     Int
  posseDeBolaMandante     String
  posseDeBolaVisitante    String
  passesMandante          Int
  passesVisitante         Int
  precisaoPassesMandante  String
  precisaoPassesVisitante String
  faltasMandante          Int
  faltasVisitante         Int
  impedimentosMandante    Int
  impedimentosVisitante   Int
  escanteiosMandante      Int
  escanteiosVisitante     Int
  dataRealizacao          DateTime?
}
